{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": "functions",
        "codebase": "default",
        "runtime": "python311",
        "ignore": [
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log"
        ]
    },
    "hosting": {
        "public": "frontend",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            "generate_pwa_icons.py",
            "convert_images.py"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            }
        ],
        "headers": [
            {
                "source": "**/*.js",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/javascript"
                    }
                ]
            }
        ]
    },
    "storage": {
        "rules": "storage.rules"
    }
}